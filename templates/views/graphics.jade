extends ../layouts/default

block css
	link(href="libs/gallery/css/blueimp-gallery.css", rel="stylesheet")


block content
	#blueimp-gallery.blueimp-gallery.blueimp-gallery-controls
		.slides
		h3.title
		a.prev ‹
		a.next ›
		a.close ×
		a.play-pause
		ol.indicator

	.container-fluid.graphicbg
		.row
			if galleries.length
				each gallery in galleries
					.col-sm-4.nopadding
						.titolographic= gallery.name
						.testographic.paddinginverso= gallery.description
						.col-sm-12
							.links.graphicdiv
								each image in gallery.images
									a(href=image.url, title=gallery.name)
										img(src=image.limit(auto,100), class='slide-show graphic')










block js
	<!--slideshow-->
	script(src='libs/gallery/js/blueimp-gallery.min.js')
	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
	script.
		$('.links').on('click', function (event) {
			var target = event.target || event.srcElement,
				link = target.src ? target.parentNode : target,
				options = {index: link, event: event},
				links = this.getElementsByTagName('a');
			blueimp.Gallery(links, options);
		});

